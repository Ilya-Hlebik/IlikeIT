<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="idglebik" id="1">
        <createTable tableName="USER">
            <column name="ID" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="FIRST_NAME" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="LAST_NAME" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="AGE" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="SEX" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="idglebik" id="1.1">
        <addPrimaryKey columnNames="ID" constraintName="id_PK" tableName="USER"/>
    </changeSet>
    <changeSet author="liquibase-docs" id="addAutoIncrement-example">
        <addAutoIncrement columnDataType="int"
                          columnName="ID"
                          incrementBy="1"
                          startWith="1"
                          tableName="USER"/>
    </changeSet>
    <changeSet id="1.2" author="idglebik">
        <addDefaultValue tableName="USER" columnName="SEX" defaultValue="'male', 'female'"/>
    </changeSet>
    <changeSet id="1.3" author="idglebik">
        <dropColumn tableName="USER" columnName="SEX"/>
        <addColumn tableName="USER">
            <column name="POSITION" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="1.4" author="idglebik">
        <dropColumn tableName="USER" columnName="POSITION"/>
    </changeSet>
    <changeSet author="idglebik" id="1.5">
        <createTable tableName="PLACE">
            <column name="ID" type="INT" >
                <constraints nullable="false" />
            </column>
            <column name="CITY" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="COUNTRY" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="ADDRESS" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="idglebik" id="1.6">
        <addPrimaryKey columnNames="ID" constraintName="id_PK" tableName="PLACE"/>
    </changeSet>
    <changeSet author="liquibase-docs" id="1.7">
        <addAutoIncrement columnDataType="int"
                          columnName="ID"
                          incrementBy="1"
                          startWith="1"
                          tableName="PLACE"/>
    </changeSet>
    <changeSet author="idglebik" id="1.8">
        <createTable tableName="POSITION">
            <column name="ID" type="INT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="user_pk"/>
            </column>
            <column name="POSITION" type="ENUM('worker', 'tester')">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="USER_POSITION">
            <column name="USER_ID" type="INT" >
                <constraints nullable="false" />
            </column>
            <column name="POSITION_ID" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="USER_ID, POSITION_ID" constraintName="id_PK" tableName="USER_POSITION"/>



        <addForeignKeyConstraint baseTableName="USER_POSITION" baseColumnNames="USER_ID" constraintName="FK_USER_POSITION__USER_ID" referencedTableName="USER"
                                 referencedColumnNames="ID"/>
        <addForeignKeyConstraint baseTableName="USER_POSITION" baseColumnNames="POSITION_ID" constraintName="FK_USER_POSITION__POSITION_ID" referencedTableName="POSITION"
                                 referencedColumnNames="ID"/>
    </changeSet>


</databaseChangeLog>